<%= form_with(model: library) do |form| %>
  <% if library.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(library.errors.count, "error") %> prohibited this library from being saved:</h2>

      <ul>
        <% library.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <% library.library_items.each do |library_items| %>
    <%= hidden_field :library, :library_items, multiple: true, value: library_items.identifier %>
  <% end %>

  <div>
    <%= form.label :library_items, style: "display: block" %>
    <%= form.file_field :library_items, multiple: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
